<div class="mb-3">
    <label for="meTextArea" class="form-label">關於我</label>
    <textarea class="form-control" id="meTextArea" rows="4"> @Model.About</textarea>
</div>
<div class="mb-3">
    <label for="locationInput" class="form-label">位置</label>
    <input type="text" class="form-control" id="locationInput" value="@Model.Location">
</div>
<div class="mb-3">
    <label for="workInput" class="form-label">工作時間</label>
    <input type="text" class="form-control" id="workInput" value="@Model.WorkTime">
</div>
<div class="cancelOrSave">
    <div class="btn cancelBtn" id="cancelBtn" data-bs-toggle="collapse" data-bs-target="#aboutCollapse">取消</div>
    <div class="btn btn-dark saveBtn" id="saveBtn" data-bs-toggle="collapse" data-bs-target="#aboutCollapse">儲存</div>
</div>