@section topCSS
{
    <style>
        * {
            color: #484848;
        }
    </style>
}

@section topJS
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
}

@section Scripts
{
    <script src="~/js/jwt.js"></script>
    <script src="~/js/cookie.js"></script>
    <script>
    const userName = document.querySelector('.userName');
    const phoneName = document.querySelector('.phoneName');
        window.onload = ()=>{
           const token = getCookie('@Html.Raw(Define.Authorization.JWT_COOKIE_KEY)');
           const memberInfo = parseJwt(token);
           userName.innerText = memberInfo['@Html.Raw(ClaimTypes.Name)'];
           phoneName.innerText = memberInfo['@Html.Raw(ClaimTypes.Name)'] + '，你好:';
        };
    </script>
}